# cURL configuration options
# http://curl.haxx.se/docs/manpage.html

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -

# Limit the time (in seconds) the connection is allowed to take
connect-timeout = 60

# Follow HTTP redirects
location

# Limit the time (in seconds) the whole operation is allowed to take
# (prevent cURL from hanging due to slow networks or links going down)
max-time = 60

# For redirects, automatically add the `Referer` HTTP header
referer = ";auto"

# Show error messages
show-error

# Do not show the progress meter
silent

# Send a fake UA string for the HTTP servers that sniff it
user-agent = "Mozilla/5.0 Gecko"
